{
  "appId": "com.antosik.guilds-client",
  "productName": "Guilds Client",
  
  "files": [
    "./target/app/main.js",
    "./node_modules/**/*",
    "./package.json"
  ],
  "extraResources": [
    {
      "from": "./target",
      "to": "."
    }
  ],
  "directories": {
    "output": "./dist"
  },
  
  "asarUnpack": ["**/*.node"],

  "mac": {
    "category": "public.app-category.games",
    "target": "dmg",
    "publish": ["github"]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "publish": ["github"]
  },
  "win": {
    "target": "nsis",
    "publish": ["github"]
  },

  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  },
  "buildDependenciesFromSource": true,
  "npmRebuild": true
}
