{
  "$schema": "http://json.schemastore.org/electron-builder",
  "appId": "com.antosik.guilds-client",
  "productName": "League Guilds Client",
  "files": [
    "./target/app/main.js",
    "./node_modules/**/*",
    "./package.json"
  ],
  "extraResources": [
    {
      "from": "./target",
      "to": "."
    }
  ],
  "directories": {
    "buildResources": "./build",
    "output": "./dist"
  },
  "asarUnpack": [
    "**/*.node"
  ],
  "mac": {
    "category": "public.app-category.games",
    "target": "dmg",
    "publish": [
      "github"
    ]
  },
  "dmg": {
    "background": "build/macos/background.png",
    "iconSize": 80,
    "window": {
      "x": 400,
      "y": 100,
      "width": 540,
      "height": 380
    },
    "contents": [
      {
        "x": 130,
        "y": 222.5
      },
      {
        "x": 410,
        "y": 222.5,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "publish": [
      "github"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "publisherName": "Antosik",
    "publish": [
      "github"
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "installerHeader": "win/header.bmp",
    "installerSidebar": "win/banner.bmp"
  },
  "buildDependenciesFromSource": true,
  "npmRebuild": true
}