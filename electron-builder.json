{
  "appId": "com.antosik.guilds-client",
  "productName": "Guilds Client",
  "directories": {
    "buildResources": "./build",
    "output": "./dist"
  },
  "asarUnpack": ["**/*.node"],
  "mac": {
    "category": "public.app-category.games",
    "target": "dmg"
  },
  "linux": {
    "target": ["AppImage", "deb"]
  },
  "win": {
    "appId": "antosik.guilds-client",
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  },
  "squirrelWindows": {
    "msi": "true"
  },
  "msi": {
    "warningsAsErrors": false
  },
  "appx": {
    "publisherDisplayName": "antosik"
  },
  "buildDependenciesFromSource": true,
  "npmRebuild": true
}
