{
  "name": "guilds-client",
  "version": "1.0.0",
  "description": "This desktop application allows users to interact with the “Guilds” program in League of Legends.",
  "main": "target/app/main.js",
  "scripts": {
    "clean": "del-cli ./target",
    "compile": "npm run clean && npm run compile:main && npm run compile:renderer",
    "compile:main": "cross-env NODE_ENV=\"production\" webpack --config main/webpack.config.ts",
    "compile:renderer": "cross-env NODE_ENV=\"production\" webpack --config renderer/webpack.config.ts",
    "dist:linux": "electron-builder --config ./electron-builder.json --linux",
    "dist:mac": "electron-builder --config ./electron-builder.json --mac",
    "dist:windows": "electron-builder --config ./electron-builder.json --win",
    "lint": "concurrently -n \"ESLint,CSSLint,Svelte\" -c \"cyan.bold,blue.bold,green.bold\" \"npm run lint:js\" \"npm run lint:css\" \"npm run lint:svelte\"",
    "lint:js": "eslint --ext .js,.ts .",
    "lint:css": "stylelint renderer/**/*.{css,html,svelte}",
    "lint:svelte": "svelte-check --workspace renderer",
    "postinstall": "electron-builder install-app-deps",
    "prestart": "npm run compile",
    "start:dev": "concurrently -n \"WebpackMain,WebpackRenderer\" -c \"cyan.bold,blue.bold\" \"webpack -w --config main/webpack.config.ts\" \"webpack -w --config renderer/webpack.config.ts\" -k",
    "start:app": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Antosik/lol-guilds-client.git"
  },
  "homepage": "https://github.com/Antosik/lol-guilds-client",
  "bugs": {
    "url": "https://github.com/Antosik/lol-guilds-client/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/markdown-it": "^10.0.2",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^10.17.14",
    "@types/node-fetch": "^2.5.7",
    "@types/terser-webpack-plugin": "^4.1.0",
    "@types/webpack": "^4.41.21",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.0.3",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.2",
    "del-cli": "^3.0.1",
    "electron": "^10.1.0",
    "electron-builder": "^22.8.0",
    "eslint": "^7.7.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.11.0",
    "null-loader": "^4.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.24.1",
    "svelte-check": "^0.1.59",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.1.2",
    "terser-webpack-plugin": "^4.1.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "Antosik",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^2.16.0",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.4",
    "league-connect": "^2.0.1",
    "markdown-it": "^11.0.0",
    "markdown-it-for-inline": "^0.1.1",
    "node-fetch": "^2.6.0",
    "svelte-spa-router": "^2.2.0"
  }
}
