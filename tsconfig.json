{
  "compilerOptions": {

    "module": "commonjs",
    "target": "ES2019",

    "sourceMap": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "pretty": true,
    "newLine": "lf",

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "@guilds-main/*": [
        "main/src/*"
      ],
      "@guilds-web/*": [
        "renderer/src/*"
      ],
      "@guilds-shared/*": [
        "shared/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist",
    "target"
  ]
}